@model IEnumerable<ERPBO.Configuration.ViewModels.FaultyStockTransferInfoViewModel>
@{
    int sl = 0;
    string badge = string.Empty;
}
<div class="row">
    <table class="table table-bordered table-sm table-striped tblFaultyStockReceive" id="tblFaultyStockReceive">
        <thead class="btn-dark">
            <tr class="text-center">
                <th>#SL</th>
                <th class="hide"></th>
                <th>Action</th>
                <th>Transfer Code</th>
                <th>StateStatus</th>
                <th>Branch From</th>
                <th>EntryUser</th>
                <th>EntryDate</th>

            </tr>
        </thead>
        <tbody></tbody>
        <tbody>
            @foreach (var info in Model)
            {
                sl = sl + 1;
                badge = info.StateStatus == "Pending" ? "badge bg-primary" : info.StateStatus == "Send" ? "badge bg-warning" : "badge bg-success";
            <tr>
                <td class="text-center text-bold">@sl</td>
                <td class="hide">@info.FSTInfoId</td>
                <td class="text-center">
                    <a href="#" class="btn btn-sm btn-outline-success data-item-details" title="View Details" data-item-details="@info.FSTInfoId"><i class="fas fa-eye"></i></a>
                    @if (info.StateStatus == "Send")
                    {
                    <a href="@Url.Action("ReceivePendingFaultyParts",new {infoId= info.FSTInfoId})" class="btn btn-sm btn-outline-warning data-item-issue" title="Issue" data-item-issue="@info.FSTInfoId"><i class="fas fa-pen"></i></a>
                    }
                </td>
                <td>@info.TransferCode</td>
                <td class="text-center" data-val="@info.StateStatus">
                    <span class="@badge">@info.StateStatus</span>
                </td>
                <td>@info.BranchName</td>
                <td class="text-center">@info.UserName</td>
                <td>@info.EntryDate.Value.ToString("dd-MMM-yy")</td>

            </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="13">
                        No data available in table
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
