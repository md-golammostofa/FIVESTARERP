@model IEnumerable<ERPBO.Configuration.ViewModels.StockTransferDetailModelToModelViewModel>
@{
    int sl = 0;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg" id="tblStockTransferMMDetails">
    <thead class="btn-dark">
        <tr class="text-center">
            <th style="vertical-align:middle">#SL</th>
            <th class="hide"></th>
            <th class="hide"></th>
            <th>Parts Name</th>
            <th>Cost Price</th>
            <th>Sell Price</th>
            <th>Transfer Qty.</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var details in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center text-bold">@sl</td>
                <td class="hide">@details.TransferDetailModelToModelId</td>
                <td class="hide">@details.PartsId</td>
                <td>@details.PartsName</td>
                <td class="text-center">@details.CostPrice.ToString("0.00 Tk")</td>
                <td class="text-center">@details.SellPrice.ToString("0.00 Tk")</td>
                <td class="text-center">@details.Quantity</td>
                <td>@details.Remarks</td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center empty-row">
                <td colspan="14">
                    No data found in table
                </td>
            </tr>
        }
    </tbody>
</table>


