@model IEnumerable<ERPBO.Configuration.ViewModels.BrandSSViewModel>
@{
    var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = pagerData.Serial;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped" id="tblBrandData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>Brand</th>
                    <th>Remarks</th>
                    <th>Entry Date</th>
                    <th>Entry User</th>
                    <th class="hide">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model)
                {
                    sl = sl + 1;
                    string entryDate = brand.EntryDate != null ? brand.EntryDate.Value.ToString("dd-MMM-yyy") : "";
                    <tr>
                        <td class="text-center" width="10%">@sl</td>
                        <td class="hide">@brand.BrandId</td>
                        <td>@brand.BrandName</td>
                        <td>@brand.Remarks</td>
                        <td>@entryDate</td>
                        <td>@brand.EntryUser</td>
                        <td class="text-center hide">
                            <a href="#" class="btn btn-outline-warning btn-sm data-edit-brand" title="Edit" data-edit-brand="@brand.BrandId"><i class="fas fa-pencil-alt"></i> </a>
                            <a href="#" class="btn btn-outline-danger btn-sm data-del-brand" title="Delete" data-del-brand="@brand.BrandId"><i class="far fa-trash-alt"></i> </a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="col-md-12 brand">
    @Html.Partial("_Pagination", pagerData)
</div>
