@model IEnumerable<ERPBO.Configuration.ViewModels.ModelSSViewModel>
@{
    var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = pagerData.Serial;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped" id="tblModelData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>Model</th>
                    <th class="hide"></th>
                    <th>Brand</th>
                    <th>Remarks</th>
                    <th>Entry Date</th>
                    <th>Entry User</th>
                    <th class="hide">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mod in Model)
                {
                    sl = sl + 1;
                    string entryDate = mod.EntryDate != null ? mod.EntryDate.Value.ToString("dd-MMM-yyy") : "";
                    <tr>
                        <td class="text-center" width="10%">@sl</td>
                        <td class="hide">@mod.ModelId</td>
                        <td>@mod.ModelName</td>
                        <td class="hide">@mod.BrandId</td>
                        <td>@mod.BrandName</td>
                        <td>@mod.Remarks</td>
                        <td>@entryDate</td>
                        <td>@mod.EntryUser</td>
                        <td class="text-center hide">
                            <a href="#" class="btn btn-outline-warning btn-sm data-edit-model" title="Edit" data-edit-model="@mod.ModelId"><i class="fas fa-pencil-alt"></i> </a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="7">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="col-md-12 model">
    @Html.Partial("_Pagination", pagerData)
</div>
