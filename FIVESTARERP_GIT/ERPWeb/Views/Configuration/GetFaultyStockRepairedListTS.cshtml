
@{
    ViewBag.Title = "Faulty Stock Repaired TS";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow card-primary card-outline card-tabs" style="margin-top:-20px">
            <div class="card-header p-0 pt-1 border-bottom-0 text-sm">
                <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="custom-tabs-two-faultyStockRepairedTsList-tab" data-toggle="pill" href="#custom-tabs-two-faultyStockRepairedTsList" role="tab" aria-controls="custom-tabs-two-faultyStockRepairedTsList" aria-selected="true">Faulty Repaired</a>
                    </li>
                </ul>
            </div>
            <div class="card-body shadow">
                <div class="tab-content" id="custom-tabs-two-tabContent">
                    @Html.AntiForgeryToken()
                    <div class="tab-pane fade show active" id="custom-tabs-two-faultyStockRepairedTsList" role="tabpanel" aria-labelledby="custom-tabs-two-faultyStockRepairedTsList-tab">
                        <div class="row" style="margin-top:-15px">
                            <div class="col-md-12">
                                <div class="card card-gray shadow">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col-md-3">
                                            </div>
                                            <div class="col-md-6">
                                                <h5 class="text-center text-bold">
                                                    List Of Faulty Stock Repaired TS
                                                </h5>
                                            </div>
                                            <div class="col-md-3">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin-top:-15px">
                                <div class="card shadow card-navy">
                                    <div class="card-body text-sm">
                                        <div class="row text-sm">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="margin-top:-10px">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12 text-sm" id="dataContainer">
                                                @{Html.RenderAction("GetFaultyStockRepairedListTS", new { @flag = "faultyRepairedts" });}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalFaultyDetails" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header alert-secondary">
                <input type="hidden" id="hdfFaultyInfoId" />
                <input type="hidden" id="hdfRowIndex" />
                <h4 id="modalHeading" class="modal-title">Faulty Repaired Parts Details</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="dataContainer1">

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        var hdfFaultyInfoId = $("#hdfFaultyInfoId");

        $(document).on('click', 'a.data-item-details', function (e) {
            e.preventDefault();
            hdfFaultyInfoId.val("0")
            var id = $(this).attr("data-item-details");
            hdfFaultyInfoId.val(id);
            //return console.log(id);
            $.when(getReqWithData('html', type.get, '/Configuration/GetFaultyRepairedDetailsTS', { infoId: id })).then(function (res, status) {
                if (status === "success") {
                    $("#dataContainer1").empty();
                    $("#dataContainer1").append(res);
                    $("#modalFaultyDetails").modal("toggle");
                }
            }).fail(function (error) {
                console.log(error);
            })
        })
    </script>
}

