@model IEnumerable<ERPBO.Configuration.ViewModels.FaultyStockRepairedInfoViewModel>
@{
    int sl = 0;
    string badge = string.Empty;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg" id="tblTransferStockDetails">
    <thead class="btn-dark">
        <tr class="text-center">
            <th style="vertical-align:middle">#SL</th>
            <th class="text-center">Actions</th>
            <th class="hide"></th>
            <th>Code</th>
            <th class="">StateStatus</th>
            <th>TS Name</th>
            <th>Assign Date</th>
            <th>Repaired Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            badge = item.StateStatus == "TS-Assigned" ? "badge bg-primary" : item.StateStatus == "Repair-Done" ? "badge bg-warning" : "badge bg-success";
            sl = sl + 1;
            string assignDate = item.AssignDate.HasValue ? item.AssignDate.Value.ToString("dd-MMM-yyy") : "";
            string repairDate = item.RepairedDate.HasValue ? item.RepairedDate.Value.ToString("dd-MMM-yyy") : "";
            <tr>
                <td class="text-center text-bold">@sl</td>
                <td class="text-center">
                    <a href="#" class="btn btn-sm btn-outline-secondary data-item-details" title="View Details" data-item-details="@item.FSRInfoId"><i class="fas fa-eye"></i></a>
                    @if (item.StateStatus == "TS-Assigned")
                    {
                    <a href="@Url.Action("RepairedPartsEntryByTS",new {infoId= item.FSRInfoId})" class="btn btn-sm btn-outline-warning data-item-issue" title="Issue" data-item-issue="@item.FSRInfoId"><i class="fas fa-pen"></i></a>
                    }
                </td>
                <td class="hide">@item.FSRInfoId</td>
                <td>@item.Code</td>
                <td class="text-center" data-val="@item.StateStatus">
                    <span class="@badge">@item.StateStatus</span>
                </td>
                <td>@item.TSName</td>
                <td class="text-center">@assignDate</td>
                <td class="text-center">@repairDate</td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center empty-row">
                <td colspan="14">
                    No data found in table
                </td>
            </tr>
        }
    </tbody>
</table>

