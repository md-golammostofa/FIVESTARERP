@model IEnumerable<ERPBO.Configuration.ViewModels.TotalStockDetailsViewModel>
@{ 
    Layout = null;
    int sl = 0;
    int stock = 0;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg" id="tblTotalStockDetails">
    <thead class="btn-dark">
        <tr class="text-center">
            <th style="vertical-align:middle">#SL</th>
            <th style="vertical-align:middle" class="hide"></th>
            <th style="vertical-align:middle" class="hide"></th>
            <th style="vertical-align:middle">Model</th>
            <th style="vertical-align:middle">Parts Name</th>
            <th style="vertical-align:middle">Parts Code</th>
            <th style="vertical-align:middle">Parses Stock</th>
            <th style="vertical-align:middle">Model Receive</th>
            <th style="vertical-align:middle">Stock</th>
            <th style="vertical-align:middle">Good Stock</th>
            <th style="vertical-align:middle">Faulty Stock</th>
            <th style="vertical-align:middle">Scrap Stock</th>
            <th style="vertical-align:middle">Dust Stock</th>
            <th style="vertical-align:middle">Care Transfer</th>
            <th style="vertical-align:middle">Eng. Pending</th>
            <th style="vertical-align:middle">Model Transfer</th>
            <th style="vertical-align:middle">Sales</th>
            <th style="vertical-align:middle">Stock Return Pending</th>
            <th style="vertical-align:middle">Faulty Transfer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            stock = item.GoodStock;
            if (stock < 20)
            {
        <tr style="background-color:#fd8773">
            <td class="text-center"><b>@sl</b></td>
            <td class="hide">@item.DescriptionId</td>
            <td class="hide">@item.MobilePartId</td>
            <td>@item.ModelName</td>
            <td>@item.PartsName</td>
            <td>@item.PartsCode</td>
            <td class="text-center">@item.ParsesStock</td>
            <td class="text-center">@item.ReceiveAModel</td>
            <td class="text-center">@item.Stock</td>
            <td class="text-center">@item.GoodStock</td>
            <td class="text-center">@item.FaultyStock</td>
            <td class="text-center">@item.ScrapStock</td>
            <td class="text-center">@item.DustStock</td>
            <td class="text-center">@item.CareTransfer</td>
            <td class="text-center">@item.EngPending</td>
            <td class="text-center">@item.TransferAModel</td>
            <td class="text-center">@item.Sales</td>
            <td class="text-center">@item.StockReturnPending</td>
            <td class="text-center">@item.FaultyTransfer</td>
        </tr>
            }
            else
            {
        <tr>
            <td class="text-center"><b>@sl</b></td>
            <td class="hide">@item.DescriptionId</td>
            <td class="hide">@item.MobilePartId</td>
            <td>@item.ModelName</td>
            <td>@item.PartsName</td>
            <td>@item.PartsCode</td>
            <td class="text-center">@item.ParsesStock</td>
            <td class="text-center">@item.ReceiveAModel</td>
            <td class="text-center">@item.Stock</td>
            <td class="text-center">@item.GoodStock</td>
            <td class="text-center">@item.FaultyStock</td>
            <td class="text-center">@item.ScrapStock</td>
            <td class="text-center">@item.DustStock</td>
            <td class="text-center">@item.CareTransfer</td>
            <td class="text-center">@item.EngPending</td>
            <td class="text-center">@item.TransferAModel</td>
            <td class="text-center">@item.Sales</td>
            <td class="text-center">@item.StockReturnPending</td>
            <td class="text-center">@item.FaultyTransfer</td>
        </tr>
            }

        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center text-bold">
                <td colspan="9">No data found in the table</td>
            </tr>
        }
    </tbody>
</table>