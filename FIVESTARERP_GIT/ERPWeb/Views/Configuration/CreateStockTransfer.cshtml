                            console.log(status);
                            enable("#btnSubmit");
                            if (res == true) {
                                $('.toastrDefaultSuccess').trigger('click');

                                setTimeout(function () {
                                    redirectPage('@Url.Action("TransferInfoList")');
                                }, 1000);
                            }
                            else {
                                $('.toastrDefaultError').trigger('click');
                            }
                        }).fail(function (error) {
                            consoleLog(error)
                        })
                        enable("#btnSubmit");
                    }
                });
            }
        });

        function redirectPage(page) {
            window.location.replace(page);
        }
