@model IEnumerable<ERPBO.SalesAndDistribution.ViewModels.ModelAndColorWiseItemStockViewModel>
@{
    int sl = 0;
}

<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-sm table-bordered table-striped table-responsive-lg tblModelAndColorWiseStock" id="tblModelAndColorWiseStock">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Color</th>
                    <th>Stock-In Qty</th>
                    <th>Stock-Out Qty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td>@item.CategoryName</td>
                        <td>@item.BrandName</td>
                        <td class="text-center">@item.ModelName</td>
                        <td class="text-center">@item.ColorName</td>
                        <td class="text-center">@item.StockInQty</td>
                        <td class="text-center">@item.StockOutQty</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
