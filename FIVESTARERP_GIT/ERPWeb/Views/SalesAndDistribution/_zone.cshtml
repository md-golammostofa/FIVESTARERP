
@model IEnumerable<ERPBO.SalesAndDistribution.ViewModels.ZoneViewModel>
@{
    int sl = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y: scroll">
        <table class="table table-sm table-striped table-bordered table-responsive-lg tblZone" id="tblZone">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>Zone Name</th>
                    <th>District</th>
                    <th>Division</th>
                    <th>Status</th>
                    <th>Remarks</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    string status = item.IsActive ? "Active" : "Inactive";
                    string badge = item.IsActive ? "badge badge-success" : "badge badge-danger";
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td class="hide">@item.ZoneId</td>
                        <td>@item.ZoneName</td>
                        <td class="text-center" data-val="@item.DistrictId">@item.DistrictName</td>
                        <td class="text-center" data-val="@item.DivisionId">@item.DivisionName</td>
                        <td class="text-center" data-val="@status">
                            <span class="@badge ">@status</span>
                        </td>
                        <td>@item.Remarks</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-sm btn-flat btn-warning data-zone-edit" data-zone-edit="@item.ZoneId">
                                <span class="fas fa-pen"></span> Edit
                            </a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center">
                        <td colspan="8">No data found in the table</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

