
@{
    ViewBag.Title = "All Branch Sells";
}

<div class="row">
    <div class="col-md-12 text-center">
        <div class="card card-gray shadow">
            <div class="card-header">
                <h4>Sells Report</h4>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                @Html.AntiForgeryToken()
                @using (Html.BeginForm("SellsReport", "ReportSS", FormMethod.Get, new { @target = "_blank" }))
                {
                    <div class="col-md-12">
                        <form method="get">
                            <div class="row text-sm">
                                <div class="col-md-2">
                                    <label for="ddlBranchName" class="control-label font-weight-bold">Branch</label>
                                    @Html.DropDownList("ddlBranchName", (IEnumerable<SelectListItem>)ViewBag.ddlBranchName, "--Select Model--", new { @class = "form-control form-control-sm select2" })
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-12 mt-3 text-sm" id="dataContainer">
                        @*@{Html.RenderAction("GetAllBranchSellsReport", new { flag = "view" });}*@
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        var ddlBranchName = $("#ddlBranchName");
        $(document).ready(function () {
            //Initialize Select2 Elements
            $('.select2').select2();

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
        })
        ddlBranchName.change(function () {
            LoadDataTable();
        })

        function LoadDataTable() {
            var data = { flag: "search", branchId: TryParseInt(ddlBranchName.val(),0) };

            console.log(data);
            $.when(getReqWithData('html', 'GET', '/FrontDesk/GetAllBranchSellsReport', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer").fadeOut('500', function () {
                        $("#dataContainer").empty();
                        $("#dataContainer").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            })
        }
    </script>
    }
