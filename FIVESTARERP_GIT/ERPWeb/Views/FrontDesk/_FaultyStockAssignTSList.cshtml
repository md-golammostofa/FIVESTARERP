@model IEnumerable<ERPBO.FrontDesk.ViewModels.FaultyStockAssignTSViewModel>

@{
    var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = pagerData.Serial;
    int stock = 0;
}
<div class="row">
    <table class="table table-bordered table-sm table-striped" id="tblFaultyStock">
        <thead class="btn-dark">
            <tr class="text-center">
                <th>#SL</th>
                <th class="hide"></th>
                <th class="hide"></th>
                <th>Model</th>
                <th>Parts Name</th>
                <th>Cost Price</th>
                <th>Sell Price</th>
                <th>Qty.</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tbody>
            @foreach (var info in Model)
            {
                sl = sl + 1;
                <tr>
                    <td class="text-center text-bold">@sl</td>
                    <td class="hide">@info.FaultyStockInfoId</td>
                    <td class="hide">@info.PartsId</td>
                    <td>@info.ModelName</td>
                    <td>@info.MobilePartName</td>
                    <td class="text-center">@info.CostPrice.ToString("0.00 Tk")</td>
                    <td class="text-center">@info.SellPrice.ToString("0.00 Tk")</td>
                    <td class="text-center">@info.Quantity</td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="13">
                        No data available in table
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="FaultyStockTSAssign">
    @Html.Partial("_Pagination", pagerData)
</div>


