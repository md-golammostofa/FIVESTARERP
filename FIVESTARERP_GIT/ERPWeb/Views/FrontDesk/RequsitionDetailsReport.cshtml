
@{
    ViewBag.Title = "Requsition Report";
}

<div class="row">
    <div class="col-md-12 text-center">
        <div class="card card-gray shadow">
            <div class="card-header">
                <h4>Eng. Requsition Pending List</h4>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                @Html.AntiForgeryToken()
                @using (Html.BeginForm("RequsitionDetailsReport", "ReportSS", FormMethod.Get, new { @target = "_blank" }))
                {
                    <div class="col-md-12">
                        <form method="get">
                            <div class="row mb-2">
                                <div class="col-md-2">
                                    <label class="control-label font-weight-bold">Model</label>
                                    @Html.DropDownList("ddlModelName", (IEnumerable<SelectListItem>)ViewBag.ddlModelName, "Search By Model", new { @class = "form-control form-control-sm ctrl-changed select2 select2-danger ctrl-changed" })
                                </div>
                                <div class="col-md-2">
                                    <label class="control-label font-weight-bold">IMEI</label>
                                    <input type="text" id="txtIMEI" name="imei" class="form-control form-control-sm" placeholder="Search By IMEI" />
                                </div>
                                <div class="col-md-2">
                                    <label for="rptType">Type</label>
                                    <select name="rptType" id="rptType" class="form-control form-control-sm">
                                        <option value="PDF">PDF</option>
                                        <option value="EXCEL">EXCEL</option>
                                    </select>
                                </div>
                                <div class="col-md-1">
                                    <label for="Download" style="visibility:hidden">Download</label>
                                    <button type="submit" title="Download Report" class="btn btn-sm btn-outline-success"><i class="fas fa-download"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
                <div class="row">
                    <div class="col-md-12" id="dataContainer" style="overflow-y:scroll">
                        @{Html.RenderAction("RequsitionDetailsReport", new { @flag = "view" });}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        var ddlModelName = $("#ddlModelName");
        var txtIMEI = $("#txtIMEI");

        ddlModelName.change(function () {
            LoadDataTable();
        })
        txtIMEI.keyup(function () {
            LoadDataTable();
        })

        function LoadDataTable() {
            var data = { flag: "search", modelId: TryParseInt(ddlModelName.val(), 0), imei: txtIMEI.val()};

            console.log(data);
            $.when(getReqWithData('html', 'GET', '/FrontDesk/RequsitionDetailsReport', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer").fadeOut('500', function () {
                        $("#dataContainer").empty();
                        $("#dataContainer").append(res).fadeIn('500');
                        $('.action').addClass('hide');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });
            pageNo = 1;
        }
    </script>
    }
