@model  IEnumerable<ERPBO.FrontDesk.ViewModels.InvoiceUsedPartsViewModel>
@{
    int sl = 0;
    double amount = 0;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg text-sm" id="tblPartsUsedQty">
    <thead class="btn-dark">
        <tr class="text-center">
            <th>#SL</th>
            <th class="hide">PartsId</th>
            <th>PartsName</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            amount += item.Total;
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.PartsId</td>
                <td>@item.MobilePartName</td>
                <td class="text-center">@item.UsedQty</td>
                <td class="text-center">@item.Price.ToString("0.00")</td>
                <td class="text-center">@item.Total.ToString("0.00")</td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="empty-row text-center">
                <td colspan="6">No data found in the table</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right text-bold">Total</td>
            <td class="text-center text-bold">@amount.ToString("0.00")</td>
        </tr>
    </tfoot>
</table>