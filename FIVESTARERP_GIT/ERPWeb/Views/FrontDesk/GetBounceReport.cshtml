
@{
    ViewBag.Title = "GetBounceReport";
}

<div class="row">
    <div class="col-md-12 text-center">
        <div class="card card-gray shadow">
            <div class="card-header">
                <h4>Bounce Job Order Reports</h4>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                @using (Html.BeginForm("JobBounceReport", "ReportSS", FormMethod.Get, new { @target = "_blank" }))
                {
                    <div class="col-md-12">
                        <form method="get">
                            <div class="row mb-2">
                                <div class="col-md-2">
                                    <label class="col-form-label">IMEI</label>
                                    <input type="text" id="txtIMEI" class="form-control form-control-sm" placeholder="Search By Receive Id" name="imei" />
                                </div>
                                <div class="col-md-1">
                                    <label class="col-form-label" for="rptType">Type</label>
                                    <select name="rptType" id="rptType" class="form-control form-control-sm">
                                        <option value="PDF">PDF</option>
                                        <option value="EXCEL">EXCEL</option>
                                    </select>
                                </div>
                                <div class="col-md-1">
                                    <label class="col-form-label" for="Download" style="visibility:hidden">Download</label>
                                    <button type="submit" title="Download Report" class="btn btn-sm btn-outline-success"><i class="fas fa-download"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
                <div class="row">
                    <div class="col-md-12" id="dataContainer" style="overflow-y:scroll">
                        @{Html.RenderAction("GetBounceReport", new { @flag = "view" });}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var txtIMEI = $("#txtIMEI");

        txtIMEI.keyup(function () {
            LoadDataTable();
        })

        function LoadDataTable() {
            var data = {flag:"Search",imei: txtIMEI.val() };

            console.log(data);
            $.when(getReqWithData('html', 'GET', '/FrontDesk/GetBounceReport', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer").fadeOut('500', function () {
                        $("#dataContainer").empty();
                        $("#dataContainer").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });
        }
    </script>
    }