@model IEnumerable<ERPBO.FrontDesk.ViewModels.TechnicalServicesStockViewModel>
@{ 
    Layout = null;
    int sl = 0;
}
<div class="col-md-12 text-sm">
    <table class="table table-bordered table-sm table-striped" id="tblUsedParts">
        <thead class="btn-dark">
            <tr class="text-center">
                <th>#SL</th>
                <th class="hide">TotalJob</th>
                <th>Parts Name</th>
                <th>Used Qty</th>
                <th>(%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
                <tr>
                    <td class="text-center">@sl</td>
                    <td class="hide">@item.TotalJob</td>
                    <td>@item.PartsName</td>
                    <td class="text-center">@item.UsedQty</td>
                    <td class="text-center">@item.Percent.ToString("0.00")</td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="6">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>