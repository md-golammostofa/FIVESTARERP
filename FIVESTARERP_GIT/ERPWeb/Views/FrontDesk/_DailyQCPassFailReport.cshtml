@model IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderViewModel>
@{
    Layout = null;
    int sl = 0;
    string badge = string.Empty;
}
<div class="col-md-12 text-sm">
    <table class="table table-bordered table-sm table-striped" id="tblDailyQCPassFail">
        <thead class="btn-dark">
            <tr class="text-center">
                <th style="vertical-align:middle">SL</th>
                <th style="vertical-align:middle">JobCode</th>
                <th style="vertical-align:middle">Model</th>
                <th style="vertical-align:middle">IMEI</th>
                <th style="vertical-align:middle">Customer Name</th>
                <th style="vertical-align:middle">Problems</th>
                <th style="vertical-align:middle">Eng. Problems</th>
                <th style="vertical-align:middle">Parts Used</th>
                <th style="vertical-align:middle">QC Status</th>
                <th style="vertical-align:middle">Eng Name</th>
                <th style="vertical-align:middle">QC Name</th>
                <th style="vertical-align:middle">Receive Date</th>
                <th style="vertical-align:middle">QC Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
                string entryDate = item.EntryDate != null ? item.EntryDate.Value.ToString("dd-MMM-yyy hh:mm tt") : "";
                badge = item.QCStatus == "QC-Fail" ? "badge bg-danger" : "badge bg-success";
                <tr>
                    <td>@sl</td>
                    <td>@item.JobOrderCode</td>
                    <td>@item.ModelName</td>
                    <td>@item.IMEI</td>
                    <td>@item.CustomerName</td>
                    <td>@item.Problems</td>
                    <td>@item.EngProblems</td>
                    <td>@item.PartsName</td>
                    <td class="text-center" data-val="@item.QCStatus">
                        <span class="@badge">@item.QCStatus</span>
                    </td>
                    <td>@item.TSName</td>
                    <td>@item.QCName1</td>
                    <td>@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                    <td>@item.QCPassFailDate.Value.ToString("dd-MMM-yyyy")</td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="6">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

