@model IEnumerable<ERPBO.Inventory.ViewModels.StockTransferInfoMToMViewModel>
@{ 
    int sl = 0;
}
<div class="row">
    <div class="col-md-12 mt-2" style="overflow-y:scroll">
        <table class="table table-bordered table-sm text-sm table-striped table-responsive-lg tblColorData" id="tblColorData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>Transfer Code</th>
                    <th>Warehouse</th>
                    <th>From Model</th>
                    <th>To Model</th>
                    <th>Entry Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    string entryDate = item.EntryDate != null ? item.EntryDate.Value.ToString("dd-MMM-yyy") : "";
                <tr>
                    <td class="text-center">@sl</td>
                    <td class="hide">@item.STransferInfoId</td>
                    <td>@item.TransferCode</td>
                    <td>@item.Warehouse</td>
                    <td>@item.FromModel</td>
                    <td>@item.ToModel</td>
                    <td >@entryDate</td>
                    <td class="text-center">
                        <a href="#" class="btn btn-warning btn-sm data-transfer-view" title="View Details" data-transfer-view="@item.STransferInfoId"><i class="fas fa-eye"></i> </a>
                    </td>
                </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center">
                        <td colspan="8">No data found in the table</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
