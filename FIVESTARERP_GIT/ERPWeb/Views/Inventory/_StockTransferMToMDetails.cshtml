@model IEnumerable<ERPBO.Inventory.ViewModels.StockTransferDetailsMToMViewModel>
@{ 
    int sl = 0;
    Layout = null;
}
<div class="row">
    <div class="col-md-12 mt-2" style="overflow-y:scroll">
        <table class="table table-bordered table-sm text-sm table-striped table-responsive-lg tblColorData" id="tblColorData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>Parts Type</th>
                    <th class="hide"></th>
                    <th>Parts</th>
                    <th>Qty.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    <tr>
                        <td class="text-center">@sl</td>
                        <td class="hide">@item.ItemTypeId</td>
                        <td >@item.ItemType</td>
                        <td class="hide">@item.ItemId</td>
                        <td>@item.Item</td>
                        <td class="text-center">@item.Quantity</td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center">
                        <td colspan="5">No data found in the table</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
