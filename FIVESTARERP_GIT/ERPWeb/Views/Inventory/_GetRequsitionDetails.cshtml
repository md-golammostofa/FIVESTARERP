@model IEnumerable<ERPBO.Production.ViewModels.RequsitionDetailViewModel>
@{
    int sl = 0;
    Layout = null;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
}
<table class="table table-bordered table-striped table-sm table-responsive-lg" id="tblReturnItems">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>#SL</th>
            <th class="hide"></th>
            <th class="hide"></th>
            <th>ItemType Name</th>
            <th class="hide"></th>
            <th>Item Name</th>
            <th>Qty.</th>
            <th>Type Of Unit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center"><b>@sl</b></td>
                <td class="hide">@d.ReqDetailId</td>
                <td class="hide">@d.ItemTypeId</td>
                <td>@d.ItemTypeName</td>
                <td class="hide">@d.ItemId</td>
                <td>@d.ItemName</td>
                <td class="text-center">@d.Quantity</td>
                <td class="text-center">@d.UnitName</td>
            </tr>
        }
    </tbody>
</table>
<br />
<div id="alert-error"></div>

@if ((string)ViewBag.RequisitionStatus == "Pending" && privilege.Edit)
{
    <div class="modal-footer">
        <button class="btn btn-sm btn-danger btnReject">Reject</button>
        <button class="btn btn-sm btn-warning btnRecheck">Recheck</button>
        <button class="btn btn-sm btn-success btnApproved">Approved</button>
    </div>
}



