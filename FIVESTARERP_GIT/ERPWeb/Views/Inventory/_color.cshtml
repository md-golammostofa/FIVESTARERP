
@model IEnumerable<ERPBO.Inventory.ViewModels.ColorViewModel>
@{
    ViewBag.Title = "Colors";
    int sl = 0;
    string badge = string.Empty;
}
<div class="row">
    <div class="col-md-12 mt-2" style="overflow-y:scroll">
        <table class="table table-bordered table-sm text-sm table-striped table-responsive-lg tblColorData" id="tblColorData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>Color Name</th>
                    <th>StateStatus</th>
                    <th>Remarks</th>
                    <th>Entry User</th>
                    <th>Update User</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    badge = item.StateStatus.ToLower() == "active" ? "badge bg-success" : "badge bg-danger";
                    <tr>
                        <td class="text-center">@sl</td>
                        <td class="hide">@item.ColorId</td>
                        <td class="text-center">@item.ColorName</td>
                        <td class="text-center" data-val="@item.StateStatus">
                            <span class="@badge">@item.StateStatus</span>
                        </td>
                        <td>@item.Remarks</td>
                        <td class="text-center">@item.EntryUser</td>
                        <td class="text-center">@item.UpdateUser</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-warning btn-flat btn-sm data-color-edit" data-color-edit="@item.ColorId"><i class="fa fa-sm fa-pen"></i> Edit</a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center">
                        <td colspan="8">No data found in the table</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



