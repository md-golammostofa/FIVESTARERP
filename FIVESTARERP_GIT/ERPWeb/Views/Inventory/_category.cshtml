@model IEnumerable<ERPBO.Inventory.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "";
    int sl = 0;
    string badge = string.Empty;
}

<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-sm table-striped table-responsive-lg tblDealers table-valign-middle" id="tblCategory">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL </th>
                    <th class="hide"></th>
                    <th>Category Name</th>
                    <th>Remarks</th>
                    <th>StateStaus</th>
                    <th>EntryUser</th>
                    <th>EntryDate</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    sl = sl + 1;
                    badge = category.IsActive ? "badge bg-success" : "badge bg-danger";
                    string status = category.IsActive ? "Active" : "Inactive";
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td class="hide">@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>@category.Remarks</td>
                        <td class="text-center" data-val="@status">
                            <span class="@badge">@status</span>
                        </td>
                        <td class="text-center">@category.EntryUser</td>
                        <td class="text-center">@category.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-warning btn-sm btn-flat data-category-edit" data-category-edit="@category.CategoryId"><i class="fa fa-pen"></i> Edit</a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="10">
                            No data found in the table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>