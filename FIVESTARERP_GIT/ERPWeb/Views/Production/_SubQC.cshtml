@model IEnumerable<ERPBO.Production.ViewModels.SubQCViewModel>
@{
    int sl = 0;
    string badge = string.Empty;
    string status = string.Empty;
}

<div class="col-md-12">
    <div class="row">
        <table class="table table-bordered table-sm table-striped table-responsive-lg tblQCSubLine" id="tblQCSubLine">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>QC Line</th>
                    <th class="hide"></th>
                    <th>SubQC Name</th>
                    <th>Remarks</th>
                    <th>Entry User</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td class="hide">@item.QCId</td>
                        <td>@item.QCLineNo</td>
                        <td class="hide">@item.SubQCId</td>
                        <td class="text-center">@item.SubQCName</td>
                        <td class="text-center">@item.Remarks</td>
                        <td class="text-center">@item.EntryUser</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-warning btn-sm data-subQC-edit" data-subQC-edit="@item.SubQCId"><i class="fa fa-pen"></i> Edit</a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="9">
                            No data found in the table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
