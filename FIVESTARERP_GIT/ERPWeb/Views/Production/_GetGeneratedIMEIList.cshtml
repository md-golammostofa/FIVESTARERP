@model IEnumerable<ERPBO.Production.ViewModels.GeneratedIMEIViewModel>
@{
    int sl = 0;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-sm table-bordered table-striped table-responsive-lg tblGeneratedIMEIList" id="tblGeneratedIMEIList">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th>Model</th>
                    <th>IMEI</th>
                    <th class="hide">QR Code</th>
                    <th class="hide">Floor</th>
                    <th class="hide">Assembly Line</th>
                    <th>Entry User</th>
                    <th>Entry Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl++;
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td class="text-center text-bold">@item.DescriptionName</td>
                        <td>@item.IMEI</td>
                        <td class="hide">@item.QRCode</td>
                        <td class="hide">@item.ProductionFloorName</td>
                        <td class="hide">@item.AssemblyLineName</td>
                        <td>@item.EntryUser</td>
                        <td>@item.EntryDate.Value.ToString("dd-MMM-yyyy hh:mm tt")</td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="empty-row text-center text-bold">
                        <td colspan="8">
                            No data found in the table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

