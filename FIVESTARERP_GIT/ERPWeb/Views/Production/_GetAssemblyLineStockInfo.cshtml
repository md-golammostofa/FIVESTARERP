@model IEnumerable<ERPBO.Production.ViewModels.AssemblyLineStockInfoViewModel>
@{
    //var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = 0;//pagerData.Serial;
    int stock = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-sm table-striped table-responsive-lg text-sm" id="tblAssemblyLineStock">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle">Floor</th>
                    <th style="vertical-align:middle">Assembly Line</th>
                    <th style="vertical-align:middle">Model</th>
                    <th style="vertical-align:middle">Warehouse</th>
                    <th style="vertical-align:middle">ItemType Name</th>
                    <th style="vertical-align:middle">Item Name</th>
                    <th style="vertical-align:middle">Stock-In Qty</th>
                    <th style="vertical-align:middle">Stock-Out Qty</th>
                    <th style="vertical-align:middle">Stock Qty</th>
                    <th style="vertical-align:middle">Type Of Unit</th>
                    <th style="vertical-align:middle">Remarks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var info in Model)
                {
                    sl = sl + 1;
                    stock = (info.StockInQty.Value - info.StockOutQty.Value);
                    <tr>
                        <td class="text-center"><b>@sl</b></td>
                        <td>@info.ProductionLineName</td>
                        <td>@info.AssemblyLineName</td>
                        <td>@info.ModelName</td>
                        <td>@info.WarehouseName</td>
                        <td>@info.ItemTypeName</td>
                        <td>@info.ItemName</td>
                        <td class="text-center">@info.StockInQty</td>
                        <td class="text-center">@info.StockOutQty</td>
                        <td class="text-center">@stock</td>
                        <td class="text-center">@info.UnitName</td>
                        <td>@info.Remarks</td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="12">
                            No data available in table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-12">
        @*@Html.Partial("_Pagination", pagerData)*@
    </div>
</div>

