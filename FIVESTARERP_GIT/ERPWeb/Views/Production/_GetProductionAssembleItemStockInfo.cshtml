@model IEnumerable<ERPBO.Production.ViewModels.ProductionAssembleStockInfoViewModel>
@{
    Layout = null;
    //var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = 0;
    int stockQty = 0;
    //string badge = string.Empty;
    //var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;

}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-sm table-responsive-lg text-sm">
            <thead class="btn-dark">
                <tr class="text-center text-bold">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle">Floor No</th>
                    <th style="vertical-align:middle">Model Name</th>
                    <th style="vertical-align:middle">Warehouse Name</th>
                    <th style="vertical-align:middle">ItemType Name</th>
                    <th style="vertical-align:middle">Item/Item-Color</th>
                    <th style="vertical-align:middle">StockIn-Qty</th>
                    <th style="vertical-align:middle">StockOut-Qty</th>
                    <th style="vertical-align:middle">Stock Qty</th>
                    <th style="vertical-align:middle">Type of Unit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    stockQty = (item.StockInQty - item.StockOutQty);
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td>@item.ProductionFloorName</td>
                        <td>@item.ModelName</td>
                        <td>@item.WarehouseName</td>
                        <td>@item.ItemTypeName</td>
                        <td>@item.ItemName</td>
                        <td class="text-center text-bold">@item.StockInQty</td>
                        <td class="text-center text-bold">@item.StockOutQty</td>
                        <td class="text-center text-bold">@stockQty</td>
                        <td class="text-center text-bold">@item.UnitName</td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center text-bold">
                        <td colspan="10">No data found in the table</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>