@model IEnumerable<ERPBO.Production.ViewModels.TransferRepairItemToQcInfoViewModel>
@{
    Layout = null;
    int sl = 0;
    string updateDate = string.Empty;
    string badge = string.Empty;
}

<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-sm text-sm table-striped table-responsive-lg">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle">Transfer Code</th>
                    <th style="vertical-align:middle">Floor</th>
                    <th style="vertical-align:middle">Repair</th>
                    <th style="vertical-align:middle">QC</th>
                    <th style="vertical-align:middle">Model</th>
                    <th style="vertical-align:middle">Warehouse</th>
                    <th style="vertical-align:middle">ItemType</th>
                    <th style="vertical-align:middle">Item Name</th>
                    <th style="vertical-align:middle">StateStatus</th>
                    <th style="vertical-align:middle">Qty</th>
                    <th style="vertical-align:middle">Entry User</th>
                    <th style="vertical-align:middle;white-space:nowrap">Entry Date</th>
                    <th style="vertical-align:middle">Received User</th>
                    <th style="vertical-align:middle">Received Date</th>
                    <th style="vertical-align:middle;white-space:nowrap">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    updateDate = item.UpdateDate.HasValue ? item.UpdateDate.Value.ToString("dd-MMM-yyyy hh:mm tt") : "";
                    badge = item.StateStatus == "Approved" ? "badge badge-success" : "badge badge-primary";
                    <tr>
                        <td class="text-center">@sl</td>
                        <td>@item.TransferCode</td>
                        <td>@item.LineName</td>
                        <td>@item.RepairLineName</td>
                        <td>@item.QCLineName</td>
                        <td class="text-center">@item.ModelName</td>
                        <td>@item.WarehouseName</td>
                        <td>@item.ItemTypeName</td>
                        <td class="text-center">@item.ItemName</td>
                        <td class="text-center" data-item-status="@item.StateStatus">
                            <span class="@badge">
                                @item.StateStatus
                            </span>
                        </td>
                        <td class="text-center">@item.ForQty</td>
                        <td>@item.EntryUser</td>
                        <td>@item.EntryDate.Value.ToString("dd-MMM-yyyy hh:mm tt")</td>
                        <td>@item.UpdateUser</td>
                        <td>@updateDate</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-sm btn-flat btn-secondary data-transfer-item-details" data-transfer-item-details="@item.TRQInfoId">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
                @if(Model.Count() == 0)
                {
                    <tr class="text-center text-bold empty-row">
                        <td colspan="16">
                            No data found in the table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

