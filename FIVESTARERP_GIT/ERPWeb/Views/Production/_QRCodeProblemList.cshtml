@model IEnumerable<ERPBO.Production.ViewModels.QRCodeProblemViewModel>
@{ 
    int sl = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped table-responsive-lg tblQCProblemList" id="tblQCProblemList">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL </th>
                    <th>QR Code</th>
                    <th>QC Line</th>
                    <th>QC Name</th>
                    <th>Problem Name</th>
                    <th>Model</th>
                    <th>Entry Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model)
                {
                    sl = sl + 1;
                <tr>
                    <td class="text-center text-bold">@sl</td>
                    <td>@line.QRCode</td>
                    <td>@line.QCLineNo</td>
                    <td >@line.SubQCName</td>
                    <td>@line.ProblemName</td>
                    <td>@line.ModelName</td>
                    <td >@line.EntryDate</td>
                </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="9">
                            No data found in the table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
