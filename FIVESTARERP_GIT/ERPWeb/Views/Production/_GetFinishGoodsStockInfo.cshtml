@model IEnumerable<ERPBO.Production.ViewModels.FinishGoodsStockInfoViewModel>
@{
    var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = pagerData.Serial;
    int stock = 0;
}
<table class="table table-bordered table-sm table-striped" id="tblWarehouseStockInfo">
    <thead class="btn-dark">
        <tr class="text-center">
            <th>#SL</th>
            <th class="hide"></th>
            <th class="hide"></th>
            <th>Floor</th>
            <th class="hide"></th>
            <th>Model</th>
            <th class="hide"></th>
            <th>Warehouse</th>
            <th class="hide"></th>
            <th>ItemType Name</th>
            <th class="hide"></th>
            <th>Item Name</th>
            <th>Stock-In Qty</th>
            <th>Stock-Out Qty</th>
            <th>Stock Qty</th>
            <th class="hide"></th>
            <th>Type Of Unit</th>
            <th>Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var info in Model)
        {
            sl = sl + 1;
            stock = (info.StockInQty.Value - info.StockOutQty.Value);
            <tr>
                <td class="text-center"><b>@sl</b></td>
                <td class="hide">@info.FinishGoodsStockInfoId</td>
                <td class="hide">@info.LineId</td>
                <td>@info.LineNumber</td>
                <td class="hide">@info.DescriptionId</td>
                <td class="text-center">@info.ModelName</td>
                <td class="hide">@info.WarehouseId</td>
                <td>@info.WarehouseName</td>
                <td class="hide">@info.ItemTypeId</td>
                <td>@info.ItemTypeName</td>
                <td class="hide">@info.ItemId</td>
                <td>@info.ItemName</td>
                <td class="text-center">@info.StockInQty</td>
                <td class="text-center">@info.StockOutQty</td>
                <td class="text-center">@stock</td>
                <td class="hide">@info.UnitId</td>
                <td class="text-center">@info.UnitName</td>
                <td>@info.Remarks</td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center empty-row">
                <td colspan="16">
                    No data available in table
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_Pagination", pagerData)