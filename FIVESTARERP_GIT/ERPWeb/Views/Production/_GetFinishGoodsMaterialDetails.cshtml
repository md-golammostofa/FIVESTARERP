@model IEnumerable<ERPBO.Production.ViewModels.FinishGoodsRowMaterialViewModel>
@{
    int sl = 0;
}

<table class="table table-bordered table-striped table-sm table-responsive-lg" id="tblMaterialDetailList">
    <thead class="btn-dark">
        <tr class="text-center">
            <th>#SL</th>
            <th>Warehouse Name</th>
            <th>ItemType Name</th>
            <th>Item Name</th>
            <th>Qunatity</th>
            <th>Type Of Unit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center"><b>@sl</b></td>
                <td>@item.WarehouseName</td>
                <td>@item.ItemTypeName</td>
                <td>@item.ItemName</td>
                <td class="text-center">@item.Quanity</td>
                <td class="text-center">@item.UnitName</td>
            </tr>
        }
        @if(Model.Count()  == 0)
        {
            <tr class="text-center">
                <td colspan="6">No data found in the table</td>
            </tr>
        }
    </tbody>
</table>

