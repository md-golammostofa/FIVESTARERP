@model IEnumerable<ERPBO.Production.ViewModels.FaultyItemStockInfoViewModel>
@{
    int sl = 0;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-sm table-bordered table-striped table-responsive-lg tblRepairFaultyReturnItems" id="tblRepairFaultyReturnItems">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">
                        <input type="checkbox" id="chkAll" class="chkAll" name="allItem" />
                    </th>
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle">Item Name</th>
                    <th style="vertical-align:middle">Current Man Made Faulty</th>
                    <th style="vertical-align:middle">Return Man Made Faulty</th>
                    <th style="vertical-align:middle">Current China Faulty</th>
                    <th style="vertical-align:middle">Return China Faulty</th>
                    <th class="warehouse hide"></th>
                    <th class="itemType hide"></th>
                    <th class="item hide"></th>
                    <th class="unit hide"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl++;
                    string itemName = item.ItemName + " [" + item.ItemTypeName + "-" + item.WarehouseName + "]";
                    int manStock = (item.ManMadeFaultyStockInQty - item.ManMadeFaultyStockOutQty);
                    int chinaStock = (item.ChinaMadeFaultyStockInQty - item.ChinaMadeFaultyStockOutQty);

                <tr data-item-row="notSelected">
                    <td class="btn-dark text-center" style="vertical-align:middle;width:5%">
                        <input type="checkbox" class="chkItem" name="item" />
                    </td>
                    <td class="text-center text-bold" style="vertical-align:middle;width:5%">@sl</td>
                    <td style="vertical-align:middle;width:50%">@itemName</td>
                    <td style="vertical-align:middle;width:10%" class="text-center text-bold">@manStock</td>
                    <td style="width:10%" class="text-center text-bold">
                        <input type="text" class="form-control form-control-sm" name="manMadeFaulty" value="@manStock" />
                    </td>
                    <td style="vertical-align:middle;width:10%" class="text-center text-bold">@chinaStock</td>
                    <td style="width:10%" class="text-center text-bold">
                        <input type="text" class="form-control form-control-sm" name="chinaMadeFaulty" value="@chinaStock" />
                    </td>
                    <td class="warehouse hide">@item.WarehouseId</td>
                    <td class="itemType hide">@item.ItemTypeId</td>
                    <td class="item hide">@item.ItemId</td>
                    <td class="unit hide">@item.UnitId</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


