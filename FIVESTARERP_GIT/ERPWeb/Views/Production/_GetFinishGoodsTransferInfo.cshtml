@model IEnumerable<ERPBO.Production.ViewModels.FinishGoodsSendToWarehouseInfoViewModel>
@{
    int sl = 0;
}

<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-sm table-striped table-bordered table-responsive-lg tblFinishGoodsTransfer" id="tblFinishGoodsTransfer">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th>Transfer_Code</th>
                    <th>Carton No</th>
                    <th>Floor</th>
                    <th>Packaging Line</th>
                    <th>Model</th>
                    <th>StateStatus</th>
                    <th>NetWeight</th>
                    <th>Qty</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl++;
                    string badge = item.StateStatus == "Send" ? "badge badge-primary" : "badge badge-success";
                    <tr>
                        <td class="text-center">@sl</td>
                        <td>@item.RefferenceNumber</td>
                        <td>@item.CartoonNo</td>
                        <td>@item.LineNumber</td>
                        <td>@item.PackagingLineName</td>
                        <td>@item.ModelName</td>
                        <td class="text-center" data-val="@item.StateStatus">
                            <span class="@badge">@item.StateStatus</span>
                        </td>
                        <td>@item.NetWeight</td>
                        <td class="text-center text-bold">@item.TotalQty</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-sm btn-flat btn-secondary data-item-finishGoods" data-item-val="@item.SendId">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
                @if(Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="12">No data found in the table</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-12">

    </div>
</div>

