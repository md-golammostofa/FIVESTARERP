@model IEnumerable<ERPBO.Production.ViewModels.FaultyCaseViewModel>
@{
    int sl = 0;
}
<div class="row">
    <div class="col-md-12" style="overflow-y:scroll">
        <table class="table table-bordered table-sm table-responsive-lg table-striped text-sm">
            <thead class="btn-dark text-center">
                <tr>
                    <th>#SL</th>
                    <th class="hide">CaseId</th>
                    <th>Problem Description</th>
                    <th>Problem Code</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td class="hide">@item.CaseId</td>
                        <td>@item.ProblemDescription</td>
                        <td class="text-center">@item.QRCode</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-warning btn-sm data-faultyCase-edit" data-faultyCase-edit="@item.CaseId" title="Edit"><i class="fa fa-pen"></i> Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


