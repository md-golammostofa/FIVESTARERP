@model IEnumerable<ERPBO.Production.ViewModels.RepairLineViewModel>
@{
    int sl = 0;
    string badge = string.Empty;
    string status = string.Empty;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped table-responsive-lg tblRepairLine" id="tblRepairLine">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th style="vertical-align:middle">#SL</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Repair Line</th>
                    <th style="vertical-align:middle" class="hide"></th>
                    <th style="vertical-align:middle">Floor</th>
                    <th style="vertical-align:middle" class="hide">Status</th>
                    <th style="vertical-align:middle">Remarks</th>
                    <th style="vertical-align:middle">Entry User</th>
                    <th style="vertical-align:middle">Update User</th>
                    <th style="vertical-align:middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    sl = sl + 1;
                    badge = item.IsActive ? "badge bg-success" : "badge bg-danger";
                    status = item.IsActive ? "Active" : "Inactive";
                    <tr>
                        <td class="text-center text-bold">@sl</td>
                        <td class="hide">@item.RepairLineId</td>
                        <td>@item.RepairLineName</td>
                        <td class="hide">@item.ProductionLineId</td>
                        <td class="text-center">@item.ProductionLineName</td>
                        <td class="text-center hide" data-val="@item.IsActive">
                            <span class="@badge">@status</span>
                        </td>
                        <td class="text-center">@item.Remarks</td>
                        <td class="text-center">@item.EntryUser</td>
                        <td class="text-center">@item.UpdateUser</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-warning btn-sm data-repair-edit" data-repair-edit="@item.RepairLineId"><i class="fa fa-pen"></i> Edit</a>
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="9">
                            No data found in the table
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>