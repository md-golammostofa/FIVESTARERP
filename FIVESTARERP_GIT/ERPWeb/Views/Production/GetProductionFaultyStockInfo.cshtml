
@{
    ViewBag.Title = "Production Faulty Stock - Receive Faulty - Transfer Faulty";
}
<div class="row text-sm">
    <div class="col-md-12">
        @Html.AntiForgeryToken()
        <div class="card card-primary card-outline card-tabs">
            <div class="card-header p-0 pt-1 border-bottom-0">
                <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="custom-tabs-two-stockInfo-tab" data-toggle="pill" href="#custom-tabs-two-stockInfo" role="tab" aria-controls="custom-tabs-two-stockInfo" aria-selected="true">Stock Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-two-receiveList-tab" data-toggle="pill" href="#custom-tabs-two-receiveList" role="tab" aria-controls="custom-tabs-two-receiveList" aria-selected="true">Faulty Receive</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-two-transferList-tab" data-toggle="pill" href="#custom-tabs-two-transferList" role="tab" aria-controls="custom-tabs-two-transferList" aria-selected="true">Transfer List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-two-stockTransfer-tab" data-toggle="pill" href="#custom-tabs-two-stockTransfer" role="tab" aria-controls="custom-tabs-two-stockTransfer" aria-selected="false">Stock Transfer</a>
                    </li>
                </ul>
            </div>
            <div class="card-body text-sm">
                <div class="tab-content" id="custom-tabs-two-tabContent">
                    <div class="tab-pane fade show active" id="custom-tabs-two-stockInfo" role="tabpanel" aria-labelledby="custom-tabs-two-stockInfo-tab">
                        <div class="row" style="margin-top:-15px">
                            <div class="col-md-12">
                                <div class="card card-gray-dark">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <a href="#" class="float-left btn btn-sm btn-outline-primary" title="Details View">
                                                    <i class="fas fa-eye"></i> Go To Details View
                                                </a>
                                            </div>
                                            <div class="col-md-6">
                                                <h5 class="text-center text-bold">
                                                    Production Faulty Stock
                                                </h5>
                                            </div>
                                            <div class="col-md-3">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin-top:-10px">
                                <div class="card card-navy">
                                    <div class="card-header">
                                        <h6 class="card-title">Search By</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row" style="margin-top:-15px">
                                            <div class="col-md-2">
                                                <label for="ddlLineNumber" class="control-label font-weight-bold">Floor</label>
                                                @Html.DropDownList("ddlLineNumber", (IEnumerable<SelectListItem>)ViewBag.ddlLineNumber, "--Select Floor--", new { @class = "form-control form-control-sm" })
                                            </div>
                                            <div class="col-md-2">
                                                <label for="ddlModelName" class="control-label font-weight-bold">Model</label>
                                                @Html.DropDownList("ddlModelName", (IEnumerable<SelectListItem>)ViewBag.ddlModelName, "--Select Model--", new { @class = "form-control form-control-sm ctrl-change select2 select2-danger" })
                                            </div>
                                            <div class="col-md-2">
                                                <label for="ddlWarehouse" class="control-label font-weight-bold">Warehouse Name</label>
                                                @Html.DropDownList("ddlWarehouse", (IEnumerable<SelectListItem>)ViewBag.ddlWarehouse, "--Select Warehouse--", new { @class = "form-control form-control-sm" })
                                            </div>
                                            <div class="col-md-2">
                                                <label for="ddlItemType" class="control-label font-weight-bold">ItemType Name</label>
                                                <select id="ddlItemType" class="form-control form-control-sm">
                                                    <option value="0">--Select Item Type--</option>
                                                </select>
                                            </div>
                                            <div class="col-md-2">
                                                <label for="ddlItem" class="control-label font-weight-bold">Item Name</label>
                                                <select id="ddlItem" class="form-control form-control-sm ctrl-change">
                                                    <option value="0">--Select Item--</option>
                                                </select>
                                            </div>
                                            <div class="col-md-2">
                                                <label class="control-label font-weight-bold">Qty(Less/Eq)</label>
                                                <input type="number" id="txtLessOrEq" class="form-control form-control-sm" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="margin-top:-10px">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="col-md-12" id="dataContainer1">
                                            @{Html.RenderAction("GetProductionFaultyStockInfo", new { @flag = "View" });}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade show" id="custom-tabs-two-receiveList" role="tabpanel" aria-labelledby="custom-tabs-two-receiveList-tab">
                        <div class="row" style="margin-top:-15px">
                            <div class="col-md-12">
                                <div class="card card-gray-dark">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col-md-3">
                                            </div>
                                            <div class="col-md-6">
                                                <h5 class="text-center text-bold">
                                                    Receive Faulty
                                                </h5>
                                            </div>
                                            <div class="col-md-3">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin-top:-10px">
                                <div class="card card-navy">
                                    <div class="card-header">
                                        <h6 class="card-title">Search By</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row" style="margin-top:-15px">
                                            <div class="col-md-2">
                                                <label for="txtTransferCode" class="control-label font-weight-bold">Transfer Code</label>
                                                <input type="text" name="search" id="txtTransferCode" class="form-control form-control-sm" placeholder="Search By Code" />
                                            </div>
                                            <div class="col-md-2">
                                                <label for="ddlLineNumberRF" class="control-label font-weight-bold">Floor</label>
                                                @Html.DropDownList("ddlLineNumberRF", (IEnumerable<SelectListItem>)ViewBag.ddlLineNumber, "--Select Floor--", new { @class = "form-control form-control-sm" })
                                            </div>
                                            <div class="col-md-2">
                                                <label for="ddlRepairLineRF" class="control-label font-weight-bold">Repair</label>
                                                <select id="ddlRepairLineRF" class="form-control form-control-sm">
                                                    <option value="0">--Select Repair--</option>
                                                </select>
                                            </div>
                                            <div class="col-md-2">
                                                <label for="ddlStateStatusRF" class="control-label font-weight-bold">Status</label>
                                                @Html.DropDownList("ddlStateStatusRF", (IEnumerable<SelectListItem>)ViewBag.ddlStateStatus, "--Select Status--", new { @class = "form-control form-control-sm" })
                                            </div>
                                            <div class="col-md-2">
                                                <label class="control-label font-weight-bold">From Date</label>
                                                <div class="input-group input-group-sm ">
                                                    <input type="text" class="form-control form-control-sm date-datePicker" id="dptFromDateRF" />
                                                    <div class="input-group-prepend cursor-pointer remove-date dptFromDateRF" style="cursor:pointer">
                                                        <span class="input-group-text">&#10008;</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <label class="control-label font-weight-bold">To Date</label>
                                                <div class="input-group input-group-sm ">
                                                    <input type="text" class="form-control form-control-sm date-datePicker" id="dptToDateRF" />
                                                    <div class="input-group-prepend cursor-pointer remove-date dptToDateRF" style="cursor:pointer">
                                                        <span class="input-group-text">&#10008;</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="margin-top:-10px">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="col-md-12" id="dataContainer2">
                                            @{Html.RenderAction("GetRepairSectionFaultyItemTransferList", new { @flag = "View" });}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade show" id="custom-tabs-two-transferList" role="tabpanel" aria-labelledby="custom-tabs-two-transferList-tab">
                        <div class="row" style="margin-top:-15px">

                        </div>
                    </div>
                    <div class="tab-pane fade show " id="custom-tabs-two-stockTransfer" role="tabpanel" aria-labelledby="custom-tabs-two-stockTransfer-tab">
                        <div class="row" style="margin-top:-15px">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalTransferDetails" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header alert-secondary">
                <input type="hidden" id="hdfInfoId" />
                <input type="hidden" id="hdfRowIndex" />
                <h4 id="modalHeading" class="modal-title">Transfer/Receive Details</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="modalContainer1">

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        var pageNo = 1;
        var hdfInfoId = $("#hdfInfoId");
        var hdfRowIndex = $("#hdfRowIndex");
        // Faulty Stock
        var ddlLineNumber = $("#ddlLineNumber");
        var ddlModelName = $("#ddlModelName");
        var ddlWarehouse = $("#ddlWarehouse");
        var ddlItemType = $("#ddlItemType");
        var ddlItem = $("#ddlItem");
        var txtLessOrEq = $("#txtLessOrEq");

        // Receive Faulty
        var txtTransferCode = $("#txtTransferCode");
        var ddlLineNumberRF = $("#ddlLineNumberRF");
        var ddlRepairLineRF = $("#ddlRepairLineRF");
        var dptFromDateRF = $("#dptFromDateRF");
        var dptToDateRF = $("#dptToDateRF");
        var ddlStateStatusRF = $("#ddlStateStatusRF");

        $(document).ready(function () {
            //Initialize Select2 Elements
            $('.select2').select2();

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });

            dptFromDateRF.prop('readonly', true);
            dptToDateRF.prop('readonly', true);
            dptFromDateRF.css("background-color", "#fff");
            dptToDateRF.css("background-color", "#fff");

            $('#dptFromDateRF').datepicker({
                format: "dd MM yyyy",
                orientation: "bottom auto",
                todayHighlight: true
            });

            $('#dptToDateRF').datepicker({
                format: "dd MM yyyy",
                orientation: "bottom auto",
                todayHighlight: true
            });
        })

        ddlLineNumber.change(function () {
            LoadDataTable();
        })

        ddlWarehouse.change(function () {
            clearDropdown("ddlItemType");
            clearDropdown("ddlItem");
            if (ddlWarehouse.val() != "") {
                LoadDropDown('/Common/GetItemTypeForDDL', 'POST', ddlItemType, JSON.stringify({ warehouseId: ddlWarehouse.val() }));
            }
            LoadDataTable();
        })
        ddlItemType.change(function () {
            clearDropdown("ddlItem");
            if (ddlItemType.val() != "") {
                LoadDropDown('/Common/GetItemForDDL', 'POST', ddlItem, JSON.stringify({ itemTypeId: ddlItemType.val() }));
            }
            LoadDataTable();
        })

        $(document).on('change', '.ctrl-change', function () {
            LoadDataTable();
        })

        txtLessOrEq.keyup(function () {
            LoadDataTable();
        })

        function LoadDataTable() {
            var data = { flag: "search", floorId: ddlLineNumber.val(), modelId: TryParseInt(ddlModelName.val(), 0), warehouseId: TryParseInt(ddlWarehouse.val(), 0), itemTypeId: TryParseInt(ddlItemType.val(), 0), itemId: TryParseInt(ddlItem.val(), 0), lessOrEq: txtLessOrEq.val(), page: pageNo };

            $.when(getReqWithData('html', 'GET', '/Production/GetProductionFaultyStockInfo', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer1").fadeOut('500', function () {
                        $("#dataContainer1").empty();
                        $("#dataContainer1").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });
            pageNo = 1;
        }
        // Pagination
        $(document).on('click', 'a.page-link', function (e) {
            e.preventDefault();
            if (!$(this).hasClass('current-page')) {
                pageNo = $(this).attr('data-page-no');
                //LoadDataTable();
            }
        })

        // Receive Faulty //

        ddlLineNumberRF.change(function () {
            clearDropdown("ddlRepairLineRF");
            if (ddlLineNumberRF.val() != "") {
                LoadDropDown('/Common/GetRepairLineByLine', 'POST', ddlRepairLineRF, JSON.stringify({ lineId: ddlLineNumberRF.val() }));
            }
            LoadDataTableReceiveFaulty();
        })

        txtTransferCode.keyup(function () {
            LoadDataTableReceiveFaulty();
        })

        ddlRepairLineRF.change(function () {
            LoadDataTableReceiveFaulty();
        })

        ddlStateStatusRF.change(function () {
            LoadDataTableReceiveFaulty();
        })

        dptToDateRF.change(function () {
            LoadDataTableReceiveFaulty();
        })

        dptFromDateRF.change(function () {
            LoadDataTableReceiveFaulty();
        })

        $(document).on('click', 'div.remove-date', function () {
            if ($(this).hasClass("dptToDateRF")) {
                if (dptToDateRF.val() !== '') {
                    dptToDateRF.val('');
                    LoadDataTableReceiveFaulty();
                }
            }
            if ($(this).hasClass("dptFromDateRF")) {
                if (dptFromDateRF.val() !== '') {
                    dptFromDateRF.val('');
                    LoadDataTableReceiveFaulty();
                }
            }
        })

        function LoadDataTableReceiveFaulty() {
            var data = { flag: "view", floorId: TryParseInt(ddlLineNumberRF.val(), 0), repairLineId: TryParseInt(ddlRepairLineRF.val(), 0), transferCode: $.trim(txtTransferCode.val()), status: ddlStateStatusRF.val(), fromDate: dptFromDateRF.val(), toDate: dptToDateRF.val(), page: pageNo };

            $.when(getReqWithData('html', 'GET', '/Production/GetRepairSectionFaultyItemTransferList', data)).then(function (res, status) {
                if (status === "success") {
                    $("#dataContainer2").fadeOut('500', function () {
                        $("#dataContainer2").empty();
                        $("#dataContainer2").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });
            pageNo = 1;
        }

        $(document).on('click', '.data-item-detail', function (e) {
            e.preventDefault();
            var id = $(this).attr("data-item-detail");
            var index = $(this).parent().parents('tr').index();
            hdfInfoId.val('');
            hdfRowIndex.val('');
            if (TryParseInt(id, 0) > 0) {
                var data = { flag: "detail", transferId: id };
                $.when(getReqWithData(dataType.html, type.get, '/Production/GetRepairSectionFaultyItemTransferList', data)).then(function (res, status) {
                    if (status === "success") {
                        hdfInfoId.val(data.transferId);
                        hdfRowIndex.val(index);
                        $("#modalContainer1").empty();
                        $("#modalContainer1").append(res);
                        $("#modalTransferDetails").modal("show");
                    }

                }).fail(function (error) {
                    console.log(error);
                })
            }
        })

        // accept the transfer stock
        $(document).on("click", ".btnAccepted", function (e) {
            e.preventDefault();
            fnTransferStateChange(hdfInfoId.val(), reqStatus.accepted);
        })

        function fnTransferStateChange(id, status) {
            var data = JSON.stringify({ transferId: id, status: status });
            $.when(postReqWithToken(dataType.applicationJson, dataType.json, type.post, '/Production/SaveRepairSectionFaultyItemReceive', data, getToken())).then(function (res, status) {
                if (res === true && status === "success") {
                    $("#modalTransferDetails").modal("toggle").toggle("fast");
                    hdfInfoId.val('0');
                    fnRemoveARowFromTbody(".tblFaultyTransferInfo", hdfRowIndex.val())
                    toastrSuccessAlert(execuStatus.successSave);
                    LoadDataTable();
                    LoadDataTableReceiveFaulty();
                }
                else {
                    toastrErrorAlert(execuStatus.fail);
                }
            }).fail(function (error) {
                console.log(error);
            })
        }

    </script>
}
